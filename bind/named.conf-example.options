options {
    forwarders {
        1.1.1.1@853;   // Cloudflare DoT
        8.8.8.8@853;   // Google DoT
    };
    forward-first no;
    
    listen-on { any; };
    listen-on-v6 { none; };
    listen-on port 853 { any; };  // For DoT
    
    dnssec-validation auto;
    tls-cert-file "/etc/bind/dns-cert.pem";
    tls-key-file "/etc/bind/dns-key.pem";
};
